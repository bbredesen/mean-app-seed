{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.10.5",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "berp-client": "file:packages/client",
    "berp-model": "file:packages/model",
    "berp-server": "file:packages/server"
  },
  "scripts": {
    "build-model": "tsc -p packages/model/tsconfig.json",
    "build-client": "cd packages/client/ && ng build",
    "build-server": "tsc -p packages/server/tsconfig.json",
    "monitor": "nodemon packages/server/dist/server.js",

    "build": "npm run build-model && npm run build-client && npm run build-server",
    "start": "node packages/server/dist/server.js"
  }
}
